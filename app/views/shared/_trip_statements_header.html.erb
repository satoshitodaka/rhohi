<thead>
  <tr>
    <th>申請者</th>
    <th>出張先</th>
    <th>出張理由</th>
    <th>出発日時</th>
    <th>帰着日時</th>
    <th>作業完了日時</th>
    <th>申請ステータス</th>
    <th>承認ステータス</th>

    <%# 操作については処理を分岐 %>

    <% if controller_name == 'trip_statements' %>
      <% if action_name == 'index' %>
        <th>編集</th>
        <th>削除</th>
      <% elsif action_name == 'show' %>
        <th>編集</th>
      <% elsif action_name == 'approved' %>
        <th>詳細</th>
      <% elsif action_name == 'denied' %>
        <th>詳細</th>
      <% else %>
      <% end %>
    <% elsif controller_name == 'approvals' %>
      <% if action_name == 'index' %>
        <th>承認</th>
      <% elsif action_name == 'denied' %>
        <th>詳細</th>
      <% elsif action_name == 'approved' %>
        <th>詳細</th>
      <% end %>
    <% end %>
  </tr>
</thead>