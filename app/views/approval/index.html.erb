<h1>承認待ちの出張旅費申請</h1>
<% if @not_approved.any? %>
  <h3>承認待ちは<%= @not_approved.count %>件</h3>
  <% @not_approved.each do |not_approval| %>
    <ul>
      <li><span class="content"><%= not_approval.user.name %></span></li>
      <li><span class="content"><%= not_approval.purpose %></span></li>
      <li><span class="content"><%= not_approval.distination %></span></li>
      <p><%=link_to "承認", trip_statement_path(not_approval.id) %></p>
    </ul>
  <% end %>
<% end %>

<h1>承認済の出張旅費申請</h1>
<% if @approved.any? %>
  <h3>承認済は<%= @approved.count %>件</h3>
  <% @approved.each do |approval| %>
    <ul>
      <li><span class="content"><%= approval.user.name %></span></li>
      <li><span class="content"><%= approval.purpose %></span></li>
      <li><span class="content"><%= approval.distination %></span></li>
    <p><%=link_to "詳細", trip_statement_path(approval.id) %></p>
    </ul>
  <% end %>
<% end %>