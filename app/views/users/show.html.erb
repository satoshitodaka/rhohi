<% provide(:title, 'ユーザー情報') %>
<h1>ユーザー情報</h1>
<div class='row'>
  <div class='col-md-10 col-md-offset-1'>
    <div class='universal'>
      <h3>基本情報</h3>
      <p>名前 : <%= @user.name %></p>
      <p>メールアドレス : <%= @user.email %></p>
      <h3>所属情報</h3>
      <p>所属会社 : <%= @user.company.name %></p>
      <%# <p>部署名 : <%= @user.department.name %>
      <h3>その他</h3>
      <p>誕生日 : <%= @user.birthday %></p>

      <h3>操作</h3>
      <% if current_user != @user %>
        <% if current_user.has_role? :admin %>
          <%= link_to '編集する', edit_other_user_registration_path(params[:id]), class:'btn btn-primary' %>
          <%= link_to '招待する', invite_user_path(@user), method: :patch, class:'btn btn-success' %>
          <%= link_to '削除する', user_path(@user), method: :delete, class:'btn btn-danger' %>
        <% else %>
          <%= link_to '編集する', edit_registration_user_path, class:'btn btn-primary' %> 
        <% end %>
      <% else %>
        <%= link_to '編集する', edit_user_registration_path, class:'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>